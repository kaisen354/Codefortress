

{
  "manifest_version": 3,
  "name": "Codeforces Problem Scraper",
  "version": "1.1",
  "description": "Scrapes the .problem-statement div from Codeforces and sends it to a local server.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://codeforces.com/problemset/problem/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Scrape Codeforces Problem"
  }
}